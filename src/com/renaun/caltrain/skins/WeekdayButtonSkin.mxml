<!--- The default skin class for a Spark ToggleButton component.  

     @see spark.components.ToggleButton
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
                   xmlns:s="library://ns.adobe.com/flex/spark" 
                   xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
                   minWidth="21" minHeight="21" 
                   alpha.disabledStates="0.5">
    
    <!-- host component -->
    <fx:Metadata>
    <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.ToggleButton")]
    ]]>
    </fx:Metadata>
    
    <fx:Script fb:purpose="styling">
        /* Define the skin elements that should not be colorized. 
           For toggle button, the graphics are colorized but the label is not. */
        static private const exclusions:Array = ["labelDisplay"];

        /**
         * @private
         */    
        override public function get colorizeExclusions():Array {return exclusions;}
        
    </fx:Script>
    
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" stateGroups="overStates" />
        <s:State name="down" stateGroups="downStates" />
        <s:State name="disabled" stateGroups="disabledStates" />
        <s:State name="upAndSelected" stateGroups="selectedStates, selectedUpStates" />
        <s:State name="overAndSelected" stateGroups="overStates, selectedStates" />
        <s:State name="downAndSelected" stateGroups="downStates, selectedStates" />
        <s:State name="disabledAndSelected" stateGroups="selectedUpStates, disabledStates, selectedStates" />
    </s:states>
    
	<s:BitmapImage id="on" width="100%">
		<s:source>
			<s:MultiDPIBitmapSource
				source160dpi="@Embed(source='/assets/dpi160/toggleBtnLeftOff.png', scaleGridTop='0', scaleGridBottom='29', scaleGridLeft='5', scaleGridRight='6')"
				source240dpi="@Embed(source='/assets/dpi240/toggleBtnLeftOff.png', scaleGridTop='0', scaleGridBottom='43', scaleGridLeft='7', scaleGridRight='8')"
				source320dpi="@Embed(source='/assets/dpi320/toggleBtnLeftOff.png', scaleGridTop='0', scaleGridBottom='57', scaleGridLeft='9', scaleGridRight='10')" />
		</s:source>
		<s:source.selectedStates>
			   <s:MultiDPIBitmapSource
				   source160dpi="@Embed(source='/assets/dpi160/toggleBtnLeftOn.png', scaleGridTop='0', scaleGridBottom='29', scaleGridLeft='5', scaleGridRight='6')"
				   source240dpi="@Embed(source='/assets/dpi240/toggleBtnLeftOn.png', scaleGridTop='0', scaleGridBottom='43', scaleGridLeft='7', scaleGridRight='8')"
				   source320dpi="@Embed(source='/assets/dpi320/toggleBtnLeftOn.png', scaleGridTop='0', scaleGridBottom='57', scaleGridLeft='9', scaleGridRight='10')" />
		</s:source.selectedStates>
	</s:BitmapImage>
    
    <!-- layer 8: text -->
    <!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay -->
    <s:Label id="labelDisplay"
             textAlign="center"
             verticalAlign="middle"
             maxDisplayedLines="1"
			 styleName="weekText"
             horizontalCenter="0" verticalCenter="1"
             top="2" bottom="2">
    </s:Label>
    
</s:SparkButtonSkin>
